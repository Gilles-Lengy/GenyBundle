{# GenyBundle:Builder:mainForm.html.twig #}

{% extends 'GenyBundle::base.html.twig' %}

{% block content %}

    {%
        set ajax = {
            'class': 'domajax change',
            'data-endpoint': path('geny_builder_main_form', {id: id}),
            'data-input': '#main-' ~ id,
            'data-output': '#main-' ~ id,
        }
    %}

    {{ form_start(form) }}

    {{ form_row(form.title, {attr: form.vars.attr|merge(ajax)}) }}

    {{ form_row(form.description, {attr: form.vars.attr|merge(ajax)}) }}

    {{ form_end(form) }}

{% endblock %}
