
{% extends 'GenyBundle::base.html.twig' %}

{% block content %}

    {%
        set ajax = {
            'class': 'domajax change',
            'data-endpoint': path('geny_builder_render_main', {id: entity.id}),
            'data-input': '#main-' ~ entity.id,
            'data-output': '#main-' ~ entity.id,
        }
    %}

    {{ form_start(main) }}

    {{ form_row(main.title, {attr: main.vars.attr|merge(ajax)}) }}

    {{ form_row(main.description, {attr: main.vars.attr|merge(ajax)}) }}

    {{ form_end(main) }}

{% endblock %}
